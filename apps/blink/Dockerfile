# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build blink`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t blink`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system blink && \
          adduser --system -G blink blink

COPY dist/apps/blink blink/
RUN chown -R blink:blink .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix blink --omit=dev -f install

CMD [ "node", "blink" ]
