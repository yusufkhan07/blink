{
  "name": "slack-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/slack-app/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/slack-app",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/slack-app/src/main.ts",
        "tsConfig": "apps/slack-app/tsconfig.app.json",
        "assets": ["apps/slack-app/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "cwd": "apps/slack-app"
      },
      "configurations": {
        "development": {
          "command": "serverless offline --noPrependStageInUrl"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "options": {
        "cwd": "apps/slack-app"
      },
      "configurations": {
        "production": {
          "command": "serverless deploy --stage production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/slack-app/Dockerfile . -t blink"
    }
  }
}
